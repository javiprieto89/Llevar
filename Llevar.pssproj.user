<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <ProjectView>ProjectFiles</ProjectView>
    
    <!-- Ruta del intérprete PowerShell 7 -->
    <PowerShellExePath>C:\Program Files\PowerShell\7\pwsh.exe</PowerShellExePath>
    
    <!-- Argumentos de ejecución 
    <PowerShellArguments>-NoLogo -ExecutionPolicy Bypass</PowerShellArguments>
    -->
	
    <!-- Script principal a ejecutar -->
    <StartAction>Program</StartAction>
    <StartProgram>$(PowerShellExePath)</StartProgram>
    <StartArguments>$(PowerShellArguments) -File "$(ProjectDir)Llevar.ps1"</StartArguments>
    <StartWorkingDirectory>$(ProjectDir)</StartWorkingDirectory>
  </PropertyGroup>
</Project>